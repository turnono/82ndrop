{
  "rules": {
    "sessions": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId",
        "$sessionId": {
          ".validate": "newData.hasChildren(['title', 'userId', 'createdAt', 'updatedAt', 'messageCount']) && newData.child('userId').val() == $userId"
        }
      }
    },
    "staging_sessions": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId",
        ".indexOn": "updatedAt",
        "$sessionId": {
          ".validate": "newData.hasChildren(['title', 'userId', 'createdAt', 'updatedAt', 'messageCount']) && newData.child('userId').val() == $userId"
        }
      }
    },
    "messages": {
      "$sessionId": {
        ".read": "auth != null && root.child('sessions').child(auth.uid).child($sessionId).exists()",
        ".write": "auth != null && root.child('sessions').child(auth.uid).child($sessionId).exists()",
        "$messageId": {
          ".validate": "newData.hasChildren(['type', 'content', 'timestamp', 'sessionId']) && newData.child('sessionId').val() == $sessionId && root.child('sessions').child(auth.uid).child($sessionId).exists()"
        }
      }
    },
    "staging_messages": {
      "$sessionId": {
        ".read": "auth != null && root.child('staging_sessions').child(auth.uid).child($sessionId).exists()",
        ".write": "auth != null && root.child('staging_sessions').child(auth.uid).child($sessionId).exists()",
        "$messageId": {
          ".validate": "newData.hasChildren(['type', 'content', 'timestamp', 'sessionId']) && newData.child('sessionId').val() == $sessionId && root.child('staging_sessions').child(auth.uid).child($sessionId).exists()"
        }
      }
    }
  }
}
